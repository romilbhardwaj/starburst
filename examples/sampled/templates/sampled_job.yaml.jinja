apiVersion: batch/v1
kind: Job
metadata:
  name: job-{{job}}
  label: 
    track: sleep
spec: 
  template: 
    spec: 
      volumes: 
      - name: dshm
        emptyDir: 
          medium: Memory
      schedulerName: chakra
      containers: 
      - name: sleep
        image: {{image}}
        volumeMounts: 
        - name: dshm
          mountPath: /dev/shm
        command: ["/bin/sh", "-c"]
        args:
        - |
          nvidia-smi --query-gpu=uuid --format=csv,noheader && echo "||" && sleep {{time}}